@model IEnumerable<BookStore_ph1.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.GenreId" class="btn btn-primary fixed-width-btn mb-3">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.GenreId" class="btn btn-danger fixed-width-btn mb-3">Delete</a>
                    }


                    <a asp-action="Details" asp-route-id="@item.GenreId" class="btn btn-primary fixed-width-btn mb-3">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
